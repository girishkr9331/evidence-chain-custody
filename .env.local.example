# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Smart Contract Address (deployed on blockchain)
VITE_CONTRACT_ADDRESS=your_contract_address_here

# Backend API URL
VITE_API_URL=http://localhost:5000

# DiceBear API Key (optional - for unique user avatars)
# Get your API key from: https://www.dicebear.com/
# Without key: Rate limited to 100 requests per hour
# With key: Higher rate limits based on your plan
VITE_DICEBEAR_API_KEY=

# Available avatar styles:
# - avataaars (default, cartoon avatars)
# - bottts (robot avatars)
# - identicon (geometric patterns)
# - initials (letter-based avatars)
# - lorelei (feminine avatars)
# - micah (illustration style)
# - personas (diverse people)
